# Database
DATABASE_URL="postgresql://user:password@localhost:5432/horizon_auth"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Keys (for production - paste entire key with \n for newlines)
# For local dev, leave empty to load from certs/ folder
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# SSO Mode (optional - for apps that verify tokens only)
AUTH_SERVICE_URL=http://auth.localhost:3000

# Application
NODE_ENV=development
PORT=3000

# Cookies
COOKIE_DOMAIN=.localhost
COOKIE_SECURE=false

# Production Example:
# AUTH_SERVICE_URL=https://auth.ofeklabs.dev
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nMIIB...\n-----END PUBLIC KEY-----"
# COOKIE_DOMAIN=.ofeklabs.dev
# COOKIE_SECURE=true
# NODE_ENV=production
